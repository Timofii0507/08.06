<Window x:Class="_08._06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08._06"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Початок діапазону:" Margin="5"/>
            <TextBox Name="StartTextBox" Margin="5"/>

            <TextBlock Text="Кінець діапазону:" Margin="5"/>
            <TextBox Name="EndTextBox" Margin="5"/>

            <TextBlock Text="Кількість потоків:" Margin="5"/>
            <TextBox Name="ThreadCountTextBox" Margin="5"/>

            <Button Name="StartButton" Content="Запустити" Click="StartButton_Click" Margin="5"/>

            <TextBox Name="OutputTextBox" Margin="5" Height="150" VerticalScrollBarVisibility="Auto" IsReadOnly="True" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
